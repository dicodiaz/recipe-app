<main id="public-recipes" class="container">
  <h1>Public Recipes</h1>
  <% @public_recipes.each do |recipe| %>
    <div id="<%= dom_id(recipe) %>" class="card mb-3 bg-light border-secondary">
      <div class="card-body">
        <div class="row">
          <div class="col-4 d-flex flex-column justify-content-center">
            <%= link_to recipe.name, recipe, class: "h5 card-title", style: "font-size: 1.5rem;" %>
            <p style="font-style: italic; font-size: 1.2rem;">
              By: <%= recipe.user.name %>
            </p>
          </div>
          <div class="col-4 d-flex flex-column justify-content-center">
            <p>Total food items: <%= recipe.total_food_items %></p>
            <p>Total price: <%= recipe.total_price %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</main>
